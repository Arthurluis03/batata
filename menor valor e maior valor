programa { // menor valor e maior valor, lembrete: tem o bagui da atividade anterior q armazena tambem. só faz aql mesmo bagui aqui e modificar
    funcao inicio()
    {
        inteiro numeros[5], i, maior, menor

        para(i = 0; i < 5; i++)
        {
            escreva("Digite o ", i+1, "º número: ")
            leia(numeros[i])
        }

        maior = numeros[0]
        menor = numeros[0]

        para(i = 1; i < 5; i++)
        {
            se (numeros[i] > maior)
                maior = numeros[i]
                escreva("\n")
            se (numeros[i] < menor)
                menor = numeros[i]
        }

        escreva("Maior: ", maior, "\n")
        escreva("Menor: ", menor, "\n")
    }
}
